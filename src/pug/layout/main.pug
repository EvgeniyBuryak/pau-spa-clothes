include ../utils/mixins
block variables

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title #{title}
    meta(name="description", content=description)
    block head

  body(class=pageClass)
    .wrapper
      #app
        include ../includes/modules/header
        include ../includes/modules/line-black
        include ../includes/modules/gender-col
        .content-wrapper
          block content
          block new-model
        include ../includes/modules/line-black_subscribe.pug
        include ../includes/modules/footer

    block script